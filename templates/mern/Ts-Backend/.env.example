# Server configuration
PORT=5000                  # Port number (common values: 3000, 5000, 8000, 8080)
HOST=localhost             # Host address (localhost, 0.0.0.0 to bind all interfaces, or specific IP/domain)
NODE_ENV=development       # Environment (development, production, test)
CORS_ENABLED=true          # Enable Cross-Origin Resource Sharing (true/false)
RATE_LIMIT_ENABLED=false   # Enable rate limiting to prevent abuse (true/false)
ENABLE_RATE_LIMITING=false # Alternative rate limiting configuration (true/false)

# Authentication
JWT_SECRET=your_jwt_secret_key_here  # Secret key for JWT tokens (use a strong random string, min 32 characters)
JWT_EXPIRATION=7d                    # Token expiration time (format: 60, "2 days", "10h", "7d")

# Database
DB_NAME=your_database_name                                    # MongoDB database name
DB_CONNECTION_STRING=mongodb://localhost:27017/your_database_name  # MongoDB connection URI (local or Atlas)
                                                            # Atlas example: mongodb+srv://username:password@cluster0.mongodb.net/dbname

# Redis
REDIS_HOST=localhost       # Redis server host (localhost or remote server)
REDIS_PORT=6379           # Redis server port (default: 6379)
REDIS_PASSWORD=your_redis_password  # Redis authentication password (if enabled)

# File uploads
UPLOAD_DIR=uploads        # Directory for permanent file uploads (relative or absolute path)
TEMP_DIR=temp             # Directory for temporary files (relative or absolute path)
MAX_FILE_SIZE=10mb        # Maximum file size limit (examples: 5mb, 10mb, 1gb)